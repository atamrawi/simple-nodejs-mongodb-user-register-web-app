<%- include('layout/header')%>

<div class="container mt-5">
    <h2 class="mb-4">Register New User <i class="fas fa-user-plus me-2"></i></h2>
    <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" required placeholder="Enter name" required>
        </div>
        <div class="form-group">
            <label for="phone">Phone No</label>
            <input type="tel" class="form-control" id="phone" name="phone" required placeholder="Enter phone number" required>
        </div>
        <div class="form-group">
            <label for="email">Email ID</label>
            <input type="email" class="form-control" id="email" name="email" required placeholder="Enter email" required>
        </div>
        <div class="form-group">
            <label for="photo">Photo</label>
            <input type="file" class="form-control-file" id="photo" name="image">
        </div>
        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save User</button>
    </form>
</div>

<%- include('layout/footer')%>