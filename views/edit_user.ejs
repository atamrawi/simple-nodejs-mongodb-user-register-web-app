<%- include('layout/header')%>

<div class="container mt-5">
    <h2 class="mb-4"><i class="fas fa-edit me-2"></i> 
        Edit User Info (<%= user.name %>)</h2>
    <form action="/update/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" value="<%= user.name %>" class="form-control" id="name" name="name" required placeholder="Enter name" required>
        </div>
        <div class="form-group">
            <label for="phone">Phone No</label>
            <input type="tel" value="<%= user.phone %>" class="form-control" id="phone" name="phone" required placeholder="Enter phone number" required>
        </div>
        <div class="form-group">
            <label for="email">Email ID</label>
            <input type="email" value="<%= user.email %>" class="form-control" id="email" name="email" required placeholder="Enter email" required>
        </div>
        <div class="form-group">
            <label for="photo">Photo</label>
            <input type="file" class="form-control-file" id="photo" name="image">
            <img src="/<%= user.image %>" class="img-thumbnail mt-1" width="100" />
        </div>
        <input type="hidden" name="old_image" value="<%= user.image %>">
        <button type="submit" class="btn btn-success" value="Update User"><i class="fas fa-edit"></i> Update User</button>
    </form>
</div>

<%- include('layout/footer')%>